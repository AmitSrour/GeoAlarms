<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.bandoleros.geoalarms"
      android:versionCode="1"
      android:versionName="0.1">
    <application android:label="@string/app_name" >
        
        <!--
        Activities
        -->
        <uses-library android:name="com.google.android.maps" />
        <activity android:name=".HomeActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MapActivityView"
            	  android:label="@string/map_view_name">
        </activity>
        <activity android:name=".AlarmListActivity"
            	  android:label="@string/alarm_view_name">
        </activity>
        <activity android:name=".PreferencesActivity"
            	  android:label="@string/preferences_view_name">
        </activity>
        <activity android:name=".HelpActivity"
            	  android:label="@string/help_view_name">
        </activity>
    </application>
        <uses-permission android:name="android.permission.INTERNET" />
</manifest>
